{
  "name": "empl-management",
  "version": "1.0.0",
  "scripts": {
    "start:employee": "cd employee-service && npm run start:dev",
    "start:account": "cd account-service && npm run start:dev",
    "start:dev": "concurrently \"npm run start:employee\" \"npm run start:account\"",
    "install:employee": "cd employee-service && npm install",
    "install:account": "cd account-service && npm install",
    "install:service": "concurrently \"npm run install:employee\" \"npm run install:account\""
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}
